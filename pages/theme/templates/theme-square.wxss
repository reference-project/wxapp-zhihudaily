.container::after {
  content: '';
  clear:both;
  display: block;
  height: 0;
}

.theme-wrapper {
  margin: 40rpx 25rpx 20rpx;
  position: relative;
  float: left;

}

.theme-img {
  width: 200rpx;
  height: 200rpx;
  box-shadow: 3px 3px 4px #999;
  /*filter: blur(4rpx);*/
}

.theme-name {
  position: absolute;
  bottom: 0rpx;
  left:-1rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  background:hsla(0,3%,60%,.4);
  width: 202rpx;
  height: 100%;
  text-align: center;
  line-height: 200rpx;
}